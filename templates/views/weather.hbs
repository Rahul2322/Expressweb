<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerlinks}}
</head>

<body>
    {{>navbar}}
    <!-- mainheader -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col 12 mx-auto">
                <div class="main-content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                        <input type="submit" value="search" id="subbtn">
                    </form>
                </div>
                <div class="tempoInformation">
                    <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_date">21 Apr</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get output</p>
                        <div class="middle_layer data_hide">
                            <p><span id="temp">0</span><sup>o</sup>C</p>
                            <p id="temp_status"></p><i class="fa fa-cloud" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- footer -->

    {{>footer}}
</body>
<script src="js/main.js"></script>
<script>
    const day = document.getElementById('day')
    const getCurrentDay = () => {
        let currentTime = new Date();
        let weekday = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday']
        let days = weekday[currentTime.getDay()];
        day.innerHTML = days

};
    getCurrentDay()

    const today_date=document.getElementById('today_date')
    const getCurrentTime=()=>{
    let currentTime=new Date();
    let months=["Jan","Feb","Mar","Apr","May","June","July","Aug","Sep","Oct","Nov","Dec"]
    let month=months[currentTime.getMonth()];
    let date=currentTime.getDate();
    today_date.innerHTML=month +' '+date
    }
    getCurrentTime()


</script>

</html>